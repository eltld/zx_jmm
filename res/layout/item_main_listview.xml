<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/save_gridview_liner"
        android:layout_width="match_parent"
        android:layout_height="125dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_main_tou"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="wrap_content"
            android:layout_height="32dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/save_gridview_mengban"
            android:drawableLeft="@drawable/clock"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:text="仅剩5天"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rel_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_quan_qian" />

            <TextView
                android:id="@+id/btn_youhuiquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageView1"
                android:background="@drawable/main_quan_bg"
                android:gravity="center_vertical"
                android:paddingLeft="8dip"
                android:paddingRight="25dip"
                android:singleLine="true"
                android:text="全场满3000减300"
                android:textColor="@color/tab_select"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/btn_youhuiquan"
                android:src="@drawable/main_quan_hou" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="10dp"
        android:background="@drawable/save_gridview_dibu" >

        <Button
            android:id="@+id/btn_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/text_dazhe"
            android:background="@null"
            android:gravity="center_vertical|left"
            android:paddingLeft="8dip"
            android:singleLine="true"
            android:text="水星家纺专场"
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_dazhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dip"
            android:text="3折起"
            android:textColor="@color/tab_select"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>