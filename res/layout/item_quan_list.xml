<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/youhuiquan_bg"
        android:layout_width="fill_parent"
        android:layout_height="120dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="10dip"
        android:background="@drawable/youhuiquan_bg_2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/img_2"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/youhuiquan_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:text="￥"
                android:textColor="@color/white"
                android:textSize="45sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip" >

                <RelativeLayout
                    android:id="@+id/rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" 
                      >
					<ImageView 
					    android:id="@+id/img_all"
					     android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"  
					    android:src="@drawable/youhuiquan_mao" 
					    />
                    <TextView
                        android:id="@+id/youhuiquan_huodong_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/youhuiquan_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/white" 
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/name"
            android:layout_marginBottom="5dip"
            android:background="@drawable/youhuiquan_xuxian" />

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_classion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌专用:"
                android:textColor="@color/white"
                android:textSize="14sp" />

           <!--  <TextView
                android:id="@+id/youhuiquan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="全场满3000减50"
                android:textColor="@color/white"
                android:textSize="14dip" /> -->
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>