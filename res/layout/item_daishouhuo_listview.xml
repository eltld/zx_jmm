            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dip"
            android:background="@drawable/querenshouhuo" />

        <Button
            android:id="@+id/btn_wuliu"
            android:layout_width="wrap_content"
